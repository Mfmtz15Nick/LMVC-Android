<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_account_circle_black_editabledp"
            tools:ignore="VectorDrawableCompat"
            android:layout_centerHorizontal="true"
            android:padding="20sp"/>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView3"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user_textbox"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:layout_below="@id/usuario"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password_textbox"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>




        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/password">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_text"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/space"
            android:layout_below="@id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/space2"
            android:layout_below="@id/space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/space3"
            android:layout_below="@id/space2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/boton"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/space3"
            android:layout_centerHorizontal="true"
            android:text="@string/login_button"/>

        <TextView
            android:id="@+id/etiqueta_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boton"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:clickable="true"
            android:text="@string/label_login"
            android:textAlignment="center"
            android:textSize="15sp" />


    </RelativeLayout>


</ScrollView>